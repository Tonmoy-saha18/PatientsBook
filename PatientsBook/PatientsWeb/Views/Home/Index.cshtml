@model Tuple<List<Country>, List<Customer>>
@{
    ViewData["Title"] = "PatientsBook Home";
}

<div class="topcontainer bg-light">
    <div class="row inner">
        <div class="col-5 result p-lg-5">
            <center><h5>Patient Details</h5></center>
            <hr />
            @foreach (var customer in Model.Item2)
            {
                <div class="row box">
                    <div class="col-5 p-2"><a asp-action="Privacy" asp-controller="Home" asp-route-id="@customer.Id" class="name">@customer.CustomerName</a></div>
                    <div class="col-4 p-2"><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@customer.Id"><i class="bi bi-archive"></i>Delete</a></div>
                    <div class="col-3 p-2"><a class="btn btn-success" asp-controller="Home" asp-action="Edit" asp-route-id="@customer.Id"><i class="bi bi-pencil-square"></i>Edit</a></div>
                </div>
            }
        </div>
        <div class="col-6 inp p-lg-3">
            <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="GetDetails" class="form-container">
                <div asp-validation-summary="All" class="alert-danger"></div>
                <div class="mb-3">
                    <label for="Name" class="form-label label">Name: </label>
                    <input type="text" class="form-control" id="Name" name="Name" placeholder="name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label label" for="FatherName">Father Name: </label>
                    <input type="text" class="form-control" id="FatherName" name="FatherName" placeholder="Father name" required>
                </div>
                <div class="mb-3">
                    <label for="MotherName" class="form-label label">Mother Name: </label>
                    <input type="text" class="form-control" id="MotherName" name="MotherName" placeholder="Mother name" required>
                </div>
                <label for="radio-button" class="form-label label">Maritial Status: </label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexradio" id="Single" value="0">
                    <label class="form-check-label " for="Single">
                        Single
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="flexradio" id="Married" value="1">
                    <label class="form-check-label" for="Married">
                        Married
                    </label>
                </div>
                <div class="mb-3">
                    <label for="countryLabel" class="form-label label">Country: </label>
                    <select class="form-select" aria-label="Default select example" name="country" required>
                        <option selected>Select Country</option>
                        @foreach (var country in Model.Item1)
                        {
                            <option value=@country.Id>@country.CountryName</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label label">Photo: </label>
                    <input class="form-control" type="file" id="formFile" name="photo" required>
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label label">Address: </label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" name="address"></textarea>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
